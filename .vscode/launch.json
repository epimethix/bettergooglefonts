    "version": "0.2.0",
    "configurations": [

        {
            "type": "pwa-node",
            "request": "launch",
            "name": "list fonts",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/gf.js",
            "args": ["${workspaceFolder}/bettergooglefontsng/src/assets/"]
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "run express fonts server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/server.js"
        }
    ]
}